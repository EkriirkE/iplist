depend() {
        need net
        use logger
}

checkconfig() {
	[ -x /usr/sbin/ipblock ] && [ -f /etc/ipblock.conf ] && [ -f /etc/ipblock.lists ] && return
	eerror "Can't locate ipblock files"

	return 1
}

start() {
	checkconfig || return 1
	ebegin "Starting ipblock"

	ipblock -s &
	eend ${?}
}

stop() {
	checkconfig || return 1
	ebegin "Stopping ipblock"

	ipblock -d &
	eend ${?}
}
